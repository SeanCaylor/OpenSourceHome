@model Post

<div class="container">
    <h2 class="text-center text-primary">New Post</h2>

    <form asp-controller="Forum" asp-action="Create" method="POST" class="mb-3">
        <div class="form-group">
            <span asp-validation-for="Topic" class="text-danger font-weight-bold"></span>
            <input asp-for="Topic" class="form-control" placeholder="Topic (required)" />
        </div>
        <div class="form-group">
            <span asp-validation-for="Body" class="text-danger font-weight-bold"></span>
            <textarea rows="10" asp-for="Body" class="form-control" placeholder="Post (required)"></textarea>
        </div>
        <p style="text-align: center;"><button class="btn btn-sm btn-outline-dark">Submit</button></p>
    </form>
</div>