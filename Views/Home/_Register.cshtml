@model User

<h3 class="mt-3 text-center text-light">Register</h3>
<hr />

<form asp-controller="Home" asp-action="Process" method="POST" autocomplete="off">
    <div class="form-group">
        <input asp-for="Email" class="form-control" placeholder="email@required.net" />
        <span asp-validation-for="Email" class="text-danger errorFont"></span>
    </div>
    <div class="form-group">
        <input asp-for="UserName" class="form-control"
            placeholder="Username (required, alphanumeric characters only please)" />
        <span asp-validation-for="UserName" class="text-danger errorFont"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control"
            placeholder="Password (required 8 characters, at least 1 capital letter and 1 number) " />
        <span asp-validation-for="Password" class="text-danger errorFont"></span>
    </div>
    <div class="form-group">
        <input asp-for="PasswordConfirm" class="form-control" placeholder="Confirm Password (required)" />
        <span asp-validation-for="PasswordConfirm" class="text-danger errorFont"></span>
    </div>
    <div class="row ">
        <div class="form-group col">
            <input asp-for="FirstName" class="form-control" placeholder="First Name (required)" />
            <span asp-validation-for="FirstName" class="text-danger errorFont"></span>
        </div>
        <div class="form-group col">
            <input asp-for="LastName" class="form-control" placeholder="Last Name (required)" />
            <span asp-validation-for="LastName" class="text-danger errorFont"></span>
        </div>
    </div>
    <div class="form-group">
        <input id="txtLocation" class="form-control" placeholder="City, State or Province, Country (required)" />
        <span asp-validation-for="nLatitude" class="text-danger errorFont"></span>
    </div>
    <input asp-for="nLatitude" id="txtLatitude" hidden>
    <input asp-for="nLongitude" id="txtLongitude" hidden>
    <small class="text-light">*information collected is for geographic reporting information only.</small>
    <p class="buttonCenter"><button class="btn btn-dark">Register</button></p>
</form>
<script type="text/javascript" src='@Context.Session.GetString("ApiLink")'></script>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
</script>
}