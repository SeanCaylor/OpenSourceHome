@model LoginUser

<h3 class="mt-3 text-center text-light">Login</h3>
<hr />

<form asp-controller="Home" asp-action="LoginProcess" method="POST">
    <div class="form-group">
        <input class="form-control" asp-for="LoginUsername" placeholder="Username" />
        <span class="text-danger errorFont" asp-validation-for="LoginUsername"></span>
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="LoginPassword" placeholder="Password" />
        <span class="text-danger errorFont" asp-validation-for="LoginPassword"></span>
    </div>
    <p class="buttonCenter"><button class="btn btn-dark">Login</button></p>
</form>